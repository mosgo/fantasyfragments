---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About | FantasyFragments.net";

const identity = {
    firstName: "Lyndon",
    country: "United Kingdom",
    occupation: "Student",
    hobbies: ["touhou", "computers", "books", "photography"],
};

// Font style variables (about)
const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "C++", "Turning it off and on again"];
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/aya.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
        <style define:vars={{skillColor, fontWeight, textCase}}>
            h1 {
                color: Gray;
                font-size: 4rem;
                font-weight: bold;
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
	</head>
	<body>
        <BaseLayout>
		<h1>{pageTitle}</h1>
        <h2>In the near future, this will be a personal blog focusing on technology, linguistics and Touhou project. This site was created using Astro!</h2>
        
        <p>Here are some sample facts.</p>
        <ul>
            <li> My name is {identity.firstName}.</li>
            <li> I live in {identity.country} and I am currently a {identity.occupation}.</li>
            {identity.hobbies.length >= 2 && 
                <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
            } 
        </ul>

        <p>My skills are:</p>
        <ul>
         {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        <BaseLayout />
        <script>
            import "../scripts/menu.js";
        </script>
	</body>
</html>
